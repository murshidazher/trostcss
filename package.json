{
  "name": "trostcss",
  "version": "1.0.0",
  "description": "Modern CSS framework",
  "main": "./dist/trost.min.css",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "start": "",
    "compile:dist": "export NODE_ENV=production && gulp build:dist",
    "compile:dev": "export NODE_ENV=development && gulp build:dev",
    "watch": "export NODE_ENV=development &&  gulp watch:trost",
    "lint": "eslint **/*.js",
    "lint:fix": "prettier-eslint '**/*.js' --write",
    "deploy": "gh-pages -d trost"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/murshidazher/trostcss.git"
  },
  "keywords": [
    "trost",
    "trostcss",
    "css",
    "framework"
  ],
  "author": "Murshid Azher",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/murshidazher/trostcss/issues"
  },
  "homepage": "https://murshidazher.github.io/trostcss/",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.27.10",
    "del": "^5.1.0",
    "eslint": "^6.2.2",
    "eslint-utils": ">=1.4.1",
    "eslint-config-google": "^0.13.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.1.1",
    "gulp": "^4.0.2",
    "gulp-cssnano": "^2.1.3",
    "gulp-header": "^2.0.9",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-watch": "^5.0.1",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-at-rules-variables": "^0.1.8",
    "postcss-for": "^2.1.1",
    "postcss-hexrgba": "^1.0.2",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.2",
    "postcss-nested": "^4.1.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^2.7.1",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "engines": {
    "node": ">=8"
  }
}
